<div class="flex fixed">
  <div class="timeline-content">
    <h3 class="text-center">
      <%= @timeline.title %>
      <small>
        <%= link_to "Modifier", edit_timeline_path(@timeline), class: "btn btn-default btn-xs" %>
      </small>
    </h3>
    <div class="row text-center timeline-infos">
      <div class="col-xs-4">
        <strong>Début</strong>
        <h3 class="text-muted slim"><%= l(@timeline.start_date, format: :short) if @timeline.start_date %></h3>
      </div>
      <div class="col-xs-4">
        <strong>Fin</strong>
        <h3 class="text-muted slim"><%= l(@timeline.end_date, format: :short) if @timeline.end_date %></h3>
      </div>
      <div class="col-xs-4">
        <strong>Budget</strong>
        <h3 class="text-muted slim"><%= @timeline.budget %> €</h3>
      </div>
    </div>
    <div id="timeline" class="step-show">
      <% @timeline.steps.each do |step| %>
        <%= render "steps/show", step: step %>
      <% end %>
    </div>
  </div>
  <div class="timeline-map">
    <div class="map" id="directions" style='width: 100%; height: 100%;'></div>
  </div>
</div>


<% content_for(:after_js) do %>
  <script>
    <%= render "timelines/map.js.erb", timeline: @timeline %>
  </script>
<% end %>